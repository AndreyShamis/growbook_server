{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h4>Event for {{ event.type | parseType }}</h4>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ event.name }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ event.type }}</td>
        </tr>
        <tr>
            <th>Value</th>
            <td>{{ event.value }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ event.note }}</td>
        </tr>
        <tr>
            <th>Options</th>
            <td>
                <a href="{{ path('events_index') }}">back to list</a>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
            </td>
        </tr>
        </tbody>
    </table>



    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
