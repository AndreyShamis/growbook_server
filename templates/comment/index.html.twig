{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>All Comments</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CommentName</th>
                <th>Comment</th>
                <th>Plant</th>
                <th>Enabled</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>HappenedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td><a href="{{ path('comment_show', {'id': comment.id}) }}">{{ comment.id }}</a></td>
                <td>{{ comment.commentName }}</td>
                <td>{{ comment.comment }}</td>
                <td><a href="{{ path('plant_show', {'id': comment.plant.id}) }}">{{ comment.plant }}</td>
                <td>{{ comment.enabled ? 'Yes' : 'No' }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.happenedAt ? comment.happenedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#    <a href="{{ path('comment_new') }}">Create new</a>#}
{% endblock %}
