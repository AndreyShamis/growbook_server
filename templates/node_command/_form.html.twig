        <td>{{ form_errors(form.cmd_value) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.published) }}</td>
        <td>{{ form_widget(form.published) }}</td>
        <td>{{ form_help(form.published) }}</td>
        <td>{{ form_errors(form.published) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.received) }}</td>
        <td>{{ form_widget(form.received) }}</td>
        <td>{{ form_help(form.received) }}</td>
        <td>{{ form_errors(form.received) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.plant) }}</td>
        <td>{{ form_widget(form.plant) }}</td>
        <td>{{ form_help(form.plant) }}</td>
        <td>{{ form_errors(form.plant) }}</td>
    </tr>
</table>
    {{ form_widget(form) }}
